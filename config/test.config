[

  {barrel_http, [
    {listen_port, 7080}
  ]},

  {barrel_store, [
    {data_dir, "data"},
    {in_memory, false},

    {dbs, [
      #{ <<"database_id">> => <<"testdb">>},
      #{<<"database_id">> => <<"source">>}
    ]}

  ]},

  {lager, [
    {log_root, "log"},
    {extra_sinks, [
      {access_lager_event,
       [{handlers,
         [{lager_file_backend,
           [{file, "access.log"},
            {level, info},
            {formatter, lager_default_formatter},
            {formatter_config, [date, " ", time," [",severity,"] ", message, "\n"]} 
           ]
          }]
        },
        {async_threshold, 500},
        {async_threshold_window, 50}]
      }]
    }
  ]},

  {sasl, [
    {sasl_error_logger, false}
  ]}
].
