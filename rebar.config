%% -*- erlang -*-
{erl_opts, [debug_info]}.

{project_app_dirs, ["barrel_core", "barrel_http"]}.

{overrides, [{override, barrel_http,
              [{deps, [{cowboy, "1.0.4"},
                       {cowboy_swagger, "1.2.0"},
                       {jsx, "2.8.1"},
                       {"hackney", "1.6.5"}]}]}
            ]
}.

{relx, [
        {release, {'barrel', "0.7.0"}, [barrel, barrel_http]},
        {sys_config, "config/test.config"},
        {dev_mode, true},
        {include_erts, false},
        {include_src, false},
        {extended_start_script, true},
        {overlay,
         [{copy, "{{output_dir}}/bin/barrel", "bin/barrel_http"}
         ]}
       ]
}.

{profiles,
 [{prod,
   [{relx,
     [{sys_config, "./config/test.config"},
      {dev_mode, false},
      {include_erts, true},
      {extended_start_script, true},
      {include_src, false},
      {extended_start_script, true}
     ]}
   ]},

  {test, []}

 ]}.
