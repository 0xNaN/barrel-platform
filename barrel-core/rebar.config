{erl_opts, [
  debug_info,
  {parse_transform, lager_transform}
]}.

{deps, [
  %% logging handler
  {lager, "3.2.1"},
  
  %% pool
  {worker_pool, "2.2.0"},
  
  %% registry
  {gproc, "0.6.1"},
  
  %% uuid lib
  {uuid, {pkg, uuid_erl}},
  
  %% rocksdb backend
  {erockdb,
    {git, "https://gitlab.com/barrel-db/erocksdb.git", {tag, "0.5.0"}}},

  {cowboy, {git, "git://github.com/ninenines/cowboy.git", {tag, "1.0.4"}}},

  {jsx,  {git, "https://github.com/talentdeficit/jsx.git", {tag, "v2.8.0"}}},

  {hackney, {git, "https://github.com/benoitc/hackney.git", {tag, "1.6.1"}}}
]}.


{ct_compile_opts, [
  debug_info,
  {parse_transform, lager_transform}
]}.


{ct_opts, [
  {sys_config, ["test/test.config"]}
]}.

{cover_enabled, true}.

{cover_opts, [verbose]}.
